@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head runat="server">
<style>
.logo {
    width: 128px;
    height: 81px;
    margin-bottom: 24px;
}

      </style>  
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/loginbody.css" rel="stylesheet" />
    <link href="~/Content/button.css" rel="stylesheet" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
</head>
<body style="background-repeat:repeat-y;width:100%; background-size:cover;background-image:url( '../Image/2.jpg' )"  >
     
    <form id="form1" runat="server">
        
    <div style="height:120px;width:100%;margin:auto;" class="head">
     <img  style="margin:auto" class="logo"  src="../Image/logo (2).png">
    </img>
    </div>
        
    <div style="height:375px;width:100%">
        <div style="height:375px;width:400px;background-color:white;margin:auto">
            <form novalidate class="SignFlow Login-content" data-za-detail-view-path-module="SignInForm " method="post" action="~/Account/Login1" data-za-extra-module="{"card":{"content":null}}">
                <table style="width:100%">
                    <tr>
                        <td style="margin:auto">
                             
                                <div class=" " style="text-align:center; height:60px;line-height:60px">
                                    <div  >给爷登录</div>
                                </div>
                          
                            <div style="background-color: #0084ff;width:100%;height:4px" ></div>
                        </td>
                    </tr>
                     <tr style="width:50px">
                        <td>
                            <div class="SignFlowInput SignFlow-accountInputContainer">
                                <label class="SignFlow-accountInput Input-wrapper">
                                    <input id="username" name="username" type="text" class="Input"    placeholder="账号"  />

                                </label>
                            </div>
                        </td>
                    </tr>
                     <tr style="width:50px">
                        <td>
                            <div class="SignFlowInput SignFlow-smsInput">
                        <label class="Input-wrapper">
                        <input  id="password" name="password" type="password" class="Input" placeholder="密码"  />

                        </label>
                    </div>
                        </td>
                    </tr>
                     <tr>
                        <td>
                            <div>
                         
                        <input   type="submit" class="Button SignFlow-submitButton Button--primary Button--blue" value="登录"></input>
                                <div  style="text-align:right;"><input type="submit" style="border-bottom:1px solid;font-size:8px;color:gray">点击注册</input></div>
                    </div>
                        </td>
                    </tr>
                 
                
            </form>
        </div>
    </div>
    </form>
</body>
</html>
