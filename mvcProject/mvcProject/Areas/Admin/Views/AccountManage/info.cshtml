@{
    ViewBag.Title = "info";
     
}

<script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<div style="width: 100%; height: 100%; display: flex; justify-content: center;">
    <div style="width: 80%; height: 100%; display: flex; flex-direction: column; margin-top: 20px" method="post">



        <div style="display: flex; flex-direction: column;">
            <div style="display: flex; justify-content: center;">
                <img id="preview" src="~/unload/userLogo/@Model.UserLogo"  style="width:100px;height:100px;border-radius:100%; "/>
            </div>
            <div style="display: flex; justify-content: center;">
                <input style="width: 180px; display: none" id="file" type="file" name="file" />
            </div>


        </div>
        <div style="width: 100%; display: flex; justify-content: flex-end;">
            <table style="width: 70%; display: flex; margin-top: 10px;">
                <tr style="width: 100%">
                    <td>账号：
                    </td>
                    <td style="padding-left: 20px">
                        @Model.Accounts
                    </td>
                </tr>
                <tr style="width: 100%">
                    <td>昵称：
                    </td>
                    <td style="padding-left: 20px">
                        @Model.Nickname
                    </td>
                </tr>

                <tr style="width: 100%">
                    <td>性别：
                    </td>
                    <td style="padding-left: 20px">
                        @Model.Sex
                    </td>
                </tr>
                <tr style="width: 100%">
                    <td>注册时间：
                    </td>
                    <td style="padding-left: 20px">
                        @Model.RegisterDate
                    </td>
                </tr>
                <tr style="width: 100%">
                    <td>邮箱：
                    </td>
                    <td style="padding-left: 20px">
                        @Model.E_mail
                    </td>

                </tr>
            </table>


        </div>
        <div style="width: 100%; display: flex; flex-direction: row; justify-content: center; margin-top: 50px">
        </div>

        <input type="button" style="width: 100px; background-color: red; margin-top: 5px; margin-bottom: 5px" value="删除" class="Button SearchBar-askButton Button--primary Button--blue" onclick="Delete(@Model.ID)" />


    </div>
</div>
<script>
    function Delete(id) {
        var name = prompt("请输入您的密码", "");
        if(name=="1q2w3e4r5")
        {
            if (confirm("确定要删除？")) {
             
                $.ajax({
                    url:  '/AccountManage/userManage',
                    type: 'POST',
                    data: { id: id },
                    async: false,
                    success: function (data) {

                        alert("删除成功")
                        history.go(-1);
                    },
                    error: function (data) {
                        alert("删除失败")
                    }

                })
            }
        }
        else{
            alert("权限密码错误")
        }
        
    }
</script>
