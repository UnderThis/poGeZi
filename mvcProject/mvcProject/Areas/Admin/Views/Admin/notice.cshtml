@model mvcProject.Areas.Admin.Models.aWrite

@{
    ViewBag.Title = "notice";
    Layout = "~/Areas/Admin/Views/Shared/_PartialPage1.cshtml";
}


<script src="~/Scripts/jquery-1.7.1.min.js"  type="text/javascript"></script>
<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/loginbody.css" rel="stylesheet" />
<link href="~/Content/button.css" rel="stylesheet" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
 <script type="text/javascript">
        $(function (){
            $("#file").on("change", function ()
            {
                var file = this.files[0];
                if (this.files && file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#preview").attr('src', e.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            })
        })
        
    </script>

<div style="height:100%;width:70%;background-color:white;justify-content:center;display:flex;flex-direction:column">
     <div  style="width:90%;display:flex;justify-content: center;background-color:#e3ebfe;margin:10px 0px 0px 0px">
        添加公告
    </div>  
    <form   method="post" enctype="multipart/form-data" style="width:90%; display:flex;flex-direction:column; margin-top:20px ">
    
        @Html.AntiForgeryToken()
       @Html.ValidationSummary()
        @Html.ValidationSummary(true)
        <div >
      <div class="SignFlowInput SignFlow-accountInputContainer">
         <label class="SignFlow-accountInput Input-wrapper">
            
            @Html.TextBoxFor(model => model.N_Title ,new { @class="Input"  , placeholder="标题"})
            @Html.ValidationMessageFor(model => model.N_Title)
            
            
         </label>
      </div>
      
     <div>
               <img id="preview" src="~/Image/null.jpg"  style="width:100px;height:100px; "/>
           </div>
           <div>
               <input id="file" type="file" name="file">
     </div>

      <div class="SignFlowInput SignFlow-accountInputContainer"  style="min-height:300px;margin-top:20px">
         <label class="SignFlow-accountInput Input-wrapper " style="min-height:300px">
             
            @Html.TextAreaFor(model => model.N_CONTENTS,new { @style="min-height:290px;width:100%;border: none;"})
            @Html.ValidationMessageFor(model=>model.N_CONTENTS)
         </label>
      </div>
    </div>
        <input type="submit" value="Create" class="Button SignFlow-submitButton Button--primary Button--blue"/>
      
    </form>
     
 </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
