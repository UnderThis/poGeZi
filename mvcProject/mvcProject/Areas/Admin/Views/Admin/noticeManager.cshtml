@model  IEnumerable<mvcProject.Models.NOTICE>
@{
    ViewBag.Title = "noticeManager";
    Layout = "~/Areas/Admin/Views/Shared/_PartialPage1.cshtml";
}
@helper Truncate(string input, int length)
{
    if (input.Length <= length) {
        @input
    } else {
        @input.Substring(0, length)<text>......</text>
    }
}
<div style="width:100%; height:100%;margin-left:80px">
    <div  style="width:90%;display:flex;justify-content: center;background-color:#e3ebfe;margin:10px 0px 8px 0px">
        公告管理
    </div>
    <div style="background-color:#e3ebfe;width:90%">
         @foreach (var aa in Model)
           {  
 
<div  style="width:100%;height:130px;display:flex;justify-content: center; align-items: center;;background-color:white">
    
    <a href="~/Admin/Admin/aNotice?noticeID=@aa.N_ID"  style="width:100%;height:120px;display:flex;justify-content: center; align-items: center;border-bottom:1px solid gray;background-color:white">
    <div style="width:90%;height:120px;display:flex;flex-direction:column">
    @*title*@
    <div id="content" style="width:100%;height:30px; display:flex;  align-items: center;">
         @aa.N_Title
        
    </div>
    @*count*@
    <div style="width:100%;height:90px;display:flex;flex-direction:row ">
        @*image*@
         
            <img id="img" name="img"  style="height:100%;width:90px;display:@(aa.N_PICTURE==""?"none":"block");padding-right:20px" src="~/unload/Notice/@aa.N_PICTURE" />
        
        @*content*@
         <div   style="height:100%;width:100%;display:flex; "> 
               @aa.N_POSTER : @Truncate(@aa.N_CONTENTS, 100)
        </div>
    </div>
    @*other*@
    <div style="width:100%;height:30px;display:flex;flex-direction:row;justify-content:flex-end; align-items: center">
        <div >
            @aa.N_DATETIME
        </div>
    </div>
   </div>
   </a>
        
</div>
}</div>
               </div>
